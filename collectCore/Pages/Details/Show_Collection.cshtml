@page "{collectionid:int}"
@model collectCore.Pages.Details.Show_CollectionModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "collection";
}
@using collectCore.Models;

<div>
    <section id="collectionsShow">
        <h1>@Model.Collection.Name</h1>
        <hr>
        <button>
            <a href="/Creation/Add_card/@Model.Collection.CollectionID">Add card</a>
        </button>
        <div>
            @{
                foreach (collectCoreBLL.Models.Item item in Model.Items)
                {
                    <div>
                        <p>@item.Name</p>
                        <p>€@item.ItemValue</p>
                        <form method="post">
                            <input type="hidden" name="itemID" value="@item.ItemID" />
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                }
            }
        </div>
    </section>
</div>